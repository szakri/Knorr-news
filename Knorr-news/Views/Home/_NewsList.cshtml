@using Common.Helpers
@model PaginatedList<NewsViewModel>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var news in Model.Items)
    {
        <div class="col d-flex">
            <a href="#" class="card-link w-100">
                <div class="card shadow-sm h-100" onclick="openModal(`@news.Title`, `@news.Summary`, `@news.Source`, `@news.PublishDate`, `@news.Link`)">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text"><small class="text-muted">Published: @news.PublishDate</small></p>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <p class="card-text"><strong>Source:</strong> @news.Source</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<!-- Pagination Controls -->
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="#" data-page="1"><i class="fa-solid fa-angles-left"></i></a>
        </li>

        <li class="page-item">
            <a class="page-link" href="#" data-page="@(Model.CurrentPage - 1 >= 1 ? Model.CurrentPage - 1 : 1)">
                <i class="fa-solid fa-angle-left"></i>
            </a>
        </li>

        <li class="page-item active">
            <a class="page-link disabled" href="#">@Model.CurrentPage / @Model.TotalPages</a>
        </li>

        <li class="page-item">
            <a class="page-link" href="#" data-page="@(Model.CurrentPage + 1 <= Model.TotalPages ? Model.CurrentPage + 1 : Model.CurrentPage)">
                <i class="fa-solid fa-angle-right"></i>
            </a>
        </li>

        <li class="page-item">
            <a class="page-link" href="#" data-page="@Model.TotalPages"><i class="fa-solid fa-angles-right"></i></a>
        </li>
    </ul>
</nav>